/**index.wxss**/
@import '/lib/weui.wxss';
navigator image{
  width: 16px;
  height: 16px;
  margin-left: 20rpx;
}

.tab{
  display: flex;
}
.tab-item{
  flex: 1;/* 屏幕空间有空余的情况就进行放大，并进行均分。默认为零 */
  font-size: 8pt;
  line-height: 72rpx;
  text-align: center;
  border-bottom: 6rpx solid #eeeeee;
}
.triangle{
  border-style: solid;
  border-width: 0rpx 10rpx 10rpx 10rpx;
  border-color: transparent transparent black transparent;
  margin: auto;
  width: 0px;
  height: 0px;
  display: none;
}
.block{
  display: block;
}
.contain {
  /* height: 500rpx; */
  border: 1px solid red;
}
.navwrap{
  height: 500rpx;
  border: 1px solid green;
}
.navwrap > swiper > swiper-item {
  height: 500rpx;
  border: 1px solid rgb(217, 255, 0);
}
